# ~/.aliases

alias b="bundle"
alias be='bundle exec'
alias bake='bundle exec rake'
alias cuc="bundle exec cucumber"
alias migrate="rake db:migrate db:test:prepare"
alias remigrate="rake db:migrate && rake db:migrate:redo && rake db:schema:dump db:test:prepare"
alias remongrate="rake mongoid:migrate && rake mongoid:migrate:redo"
alias s="bundle exec rspec"
alias gi="gem install"
alias giv="gem install -v"

# Git shortcuts
alias g='git'
alias got='git'
alias get='git'

# Other
alias ln='ln -v'
alias mkdir='mkdir -p'
alias ..="cd .."
alias ...="cd ../.."
alias cdp="cd ~/Projects"
alias cds="cd ~/Sites"
alias l='ls'
alias ll='ls -al'
alias lh='ls -Alh'

# Show/hide hidden files in Finder
alias show="defaults write com.apple.Finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.Finder AppleShowAllFiles -bool false && killall Finder"

# Sass
alias sassw='sass --watch stylesheets/sass:stylesheets'
alias sasswb='sass --watch stylesheets/sass:stylesheets -r ./stylesheets/sass/bourbon/lib/bourbon.rb'

# Jekyll
alias jeks='jekyll --server --auto'

# Stupid stuff
alias dub='yes "wub" | xargs say -v alex'

# MySQL
alias mysql='/usr/local/mysql/bin/mysql'
alias mysqladmin='/usr/local/mysql/bin/mysqladmin'